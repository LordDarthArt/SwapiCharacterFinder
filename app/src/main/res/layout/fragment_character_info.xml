<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/about_album_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <TextView
                android:id="@+id/character_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/character_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/character_mass"
                app:layout_constraintStart_toStartOf="@+id/character_name"
                app:layout_constraintTop_toBottomOf="@+id/character_name" />

            <TextView
                android:id="@+id/character_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/character_name"
                app:layout_constraintTop_toBottomOf="@+id/character_name" />

            <TextView
                android:id="@+id/character_hair_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/character_mass"
                app:layout_constraintStart_toStartOf="@+id/character_height"
                app:layout_constraintTop_toBottomOf="@+id/character_height" />

            <TextView
                android:id="@+id/character_skin_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/character_hair_color"
                app:layout_constraintStart_toStartOf="@+id/character_hair_color"
                app:layout_constraintTop_toBottomOf="@+id/character_hair_color" />

            <TextView
                android:id="@+id/character_eye_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/character_skin_color"
                app:layout_constraintStart_toStartOf="@+id/character_skin_color"
                app:layout_constraintTop_toBottomOf="@+id/character_skin_color" />

            <TextView
                android:id="@+id/character_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/character_eye_color"
                app:layout_constraintTop_toBottomOf="@+id/character_eye_color" />

            <TextView
                android:id="@+id/character_birth_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/character_gender"
                app:layout_constraintEnd_toStartOf="@+id/character_gender"
                app:layout_constraintStart_toStartOf="@+id/character_eye_color"
                app:layout_constraintTop_toTopOf="@+id/character_gender" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>